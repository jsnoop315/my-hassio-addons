{
    "arch": ["armv7", "armhf"],
    "name": "pilight",
    "version": "0.2.6", 
    "slug": "pilight",
    "description": "Pilight server",
    "startup": "services",
    "boot": "auto",
    "devices": ["/dev/mem:rw"],
    "full_access": true,
    "options": {
      "sender": 0,
      "receiver": -1
    },
    "schema": {
      "sender": "int",
      "receiver": "int"
    },
    "privileged": ["SYS_RAWIO"],
    "gpio": "true",
    "webui": "http://[HOST]:[PORT:5001]",
    "ports": {
      "5003/tcp": 5003,
      "5001/tcp": 5001
    }
  }
